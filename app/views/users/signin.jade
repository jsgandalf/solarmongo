extends auth

block auth
  h2 Sign in
  br
  form.signin.form-horizontal(role="form",action="/users/session", method="post")
    .form-group
      label.control-label.col-md-2(for='email') Email:
      .col-md-10
        input.form-control#email(type='text', name="email", placeholder='Email')

    .form-group
      label.control-label.col-md-2(for='password') Password:
      .col-md-10
        input#password(class='form-control',type='password', name="password", placeholder='Password')

    .form-actions
      button.btn.btn-success(type='submit') Sign in
      &nbsp;
      | or&nbsp;
      a.show-signup(href="/signup") Sign up
